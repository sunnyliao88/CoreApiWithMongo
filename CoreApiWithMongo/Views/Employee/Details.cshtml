@model Employee

@{
    ViewData["Title"] = "Details";   
}


<div class="card">
    <div class="card-header text-center">
        @Model.Name
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Employee.Name)*@
                <label asp-for="Name"></label>



            </dt>
            <dd class="col-sm-10">
                @Model.Name

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class="col-sm-10">
                @Model.Department
                @*@Html.DisplayFor(model => model.Employee.Department)*@

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FileContent)
            </dt>
            <dd class="col-sm-10">
                
                

            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-sm btn-success float-left">Edit</a>
        <a asp-action="Index" asp-controller="employee" class="btn btn-sm btn-success float-lg-right">Back</a>
    </div>
</div>




