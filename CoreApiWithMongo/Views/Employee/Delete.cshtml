@model CoreApiWithMongo.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 class="text-warning">Are you sure you want to delete @Model.Name ?</h3>
<hr />
<div>
    <dl class="row">        
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
           @Model.Department.DepartmentName
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
        <a asp-action="Index" class="btn btn-outline-info float-right">Cancel</a>
    </form>
</div>
